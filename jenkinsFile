pipeline {
    agent any

    parameters {
        string(name: 'PARAMETER_1', description: 'First string parameter', defaultValue: '')
        string(name: 'PARAMETER_2', description: 'Second string parameter', defaultValue: '')
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    def gitRepoUrl = 'https://github.com/yourusername/your-repo.git'
                    def checkoutDir = "${env.WORKSPACE}/repo"

                    git branch: 'master', url: gitRepoUrl, credentialsId: 'your-credentials-id'
                }
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    sh "cd repo && ./gradlew clean test -Pparam1=${params.PARAMETER_1} -Pparam2=${params.PARAMETER_2}"
                }
            }
        }
    }

    post {
        always {
            junit '**/build/test-results/test/*.xml'
        }
    }
}